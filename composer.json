{
    "name": "sioweb/ccevent",
    "type": "composer-plugin",
    "description": "Composer plugin event handler, run plugin scripts right after installer (post-[update|install]-cmd) is done.",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Sascha Weidner",
            "homepage": "https://www.sioweb.com"
        }
    ],
    "require": {
        "php": "^7.1||^8.0",
        "composer-plugin-api": "^1.1||^2.0"
    },
    "autoload": {
        "psr-4": {
            "Sioweb\\CCEvent\\": "src/"
        }
    },
    "extra": {
        "class": "Sioweb\\CCEvent\\Composer\\Plugin"
    }
}
